<style>
    .pd {
        margin-right:20px;
        width: 250px;
        text-align:center;
    }


    .blue {
        border-radius: 35px;
        display: block;
        float: left;
        height: 110px;
        margin-right: 35px;
        vertical-align: baseline;
        width: 110px;
        background-repeat: no-repeat;
        background-size: 80px 80px;
    }

    #ops {
        background-image: url(<%= asset_path 'users.png' %>);
        background-size: cover;

    }

    #levels {
        background-image: url(<%= asset_path 'locs.png' %>);
        background-size: cover;
        margin-left:35px;
    }

    #exam {
        background-image: url(<%= asset_path 'exam_mark.png' %>);
        background-size: cover;
        margin-left:35px;
    }

    #new {
        background-image: url(<%= asset_path 'new_test.png' %>);
        background-size: cover;
        margin-left:35px;
    }

    #kls {
        background-image: url(<%= asset_path 'pro.png' %>);
        background-size: cover;
    }

    #qct {
        background-image: url(<%= asset_path 'pro.png' %>);
        background-size: cover;
    }

    .txt {
        color: #000000;
        display: block;
        font-size: 19px;
        position: relative;
        text-align: center;
        top: 120px;
    }

</style>
<br />
<br />

<base target="_parent">

<%= link_to '<span class="txt"> Stock levels </span>'.html_safe, stock_levels_path, :class=>'blue', :id => "levels" %>
<% if ! is_supervisor %>
<%= link_to '<span class="txt"> Record kit loss </span>'.html_safe, kit_loss_path, :class=>'blue', :id => "kls" %>
<%= link_to '<span class="txt"> QC tests </span>'.html_safe, quality_control_tests_path, :class=>'blue', :id => "qct" %>
<%= link_to '<span class="txt"> Test </span>'.html_safe, tests_path, :class=>'blue', :id => "pro" %>
<% else %>
<%= link_to '<span class="txt"> Check Tests </span>'.html_safe, list_tests_path, :class=>'blue', :id => "exam" %>
<%= link_to '<span class="txt"> New Test </span>'.html_safe, add_test_path, :class=>'blue', :id => "new" %>
<% end %>


