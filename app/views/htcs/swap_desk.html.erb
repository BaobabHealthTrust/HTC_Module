<html>
<head>
  	<%= javascript_include_tag 'jquery-1.3.2.min' %>
	<script>
					var cancelDestination = "/htcs";

            function __$(id){
                    return document.getElementById(id);
            }

            function doLogin(id){

                            if(__$(id) && __$(id).value.trim().match(/\$/)){

                               __$(id).value =  __$(id).value.trim().replace(/\$/, "");

                                    clearTimeout(id)
                                  document.forms[0].submit();

                                    return;
                            }

                      setTimeout("doLogin('" + id + "')", 500);
            }

	</script>
  <style>
    #stage, #btn3, #btn2, #btn1{
      display: none ! important;
}
#buttons{
  width:10% ! important;
}
  </style>

</head>
<body onload="adjust()">

<%= form_tag(swap_path, method: "post")  do %>
	<fieldset>
	
		<legend>Swap Desk</legend>	
                <label for="location">Swap Location</label>
                <input type="text" id="location" name="location" fieldtype="barcode" callback="doLogin('location')" />
	
	</fieldset>
		<%= link_to "Cancel" , htcs_path %>
		<%= submit_tag("Finish") %>
	
	
<% end %>
</body>
</html>
