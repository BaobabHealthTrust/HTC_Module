<html>
	<head>
	<script>
					var cancelDestination = '<%= protocols_path %>';
	</script>
	</head>
<body>


<%= form_tag({:action => "edit_protocols"}, {:method => "post"}) do %>
            <fieldset>
			<legend>Update Protocol</legend>
																	<input type='hidden' name='protocol_id' value=<%= @protocol.id %>
                                  <br />
                                  <label for="name">Name</label>
                                  <%= text_field_tag :name, @protocol.name %>

                                  <label for="description">Description</label>
                                  <%= text_field_tag :description, @protocol.description %>
                                  
                                  <label for="data_type">Data type</label>
                                  <%=select_tag "data_type", options_for_select(["","Datetime","Time", "Boolean", "Number", "Text"]), :value =>"Number" %>
																	
																	<%= label_tag :answers %>
																	<%=select_tag "answers", options_from_collection_for_select(@location, "name", "name")%>
							</fieldset>
 	<%= link_to "Cancel" , protocols_path %>
	<%= submit_tag "Finish" %>
           
<%end%>

<script>
	document.getElementById('data_type').innerHTML+='<option value="<%#= @protocol.data_type %>" selected="selected" > <%#= @protocol.data_type %> </option>'
	document.getElementById('answers').innerHTML+='<option value="<%#= @protocol.answers %>" selected="selected" > <%#= @protocol.answers %> </option>'
</script>

</body>
</html>


