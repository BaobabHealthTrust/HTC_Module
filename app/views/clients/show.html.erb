    <style>
      .blank {
        display: none;
      }
      * {
        -webkit-user-select: none;
        -khtml-user-select: none;
        -moz-user-select: -moz-none;
        -o-user-select: none;
        user-select: none;
      }

      #encounters{
            background-color: grey;
            border-bottom: 1px outset #eeeeee;
            border-style: outset;
            border-top: 1px outset #eeeeee;
            display: block;
            width: 98%;
            padding: 10px 16px 10px 10px;
            text-align: center;
            text-decoration: none;
}
#texts{
  border-radius: 10px;
