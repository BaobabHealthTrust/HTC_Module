<body>
	<div id='home'>
				<input type="text" id="appname" value="HIV Testing<br/>&<br/>Counseling" />
				

			<div id="patient-card">
				
				<input type="text" id="gender" value='<%= @client.person.gender.chars.first.upcase %>' />
				
				<input type="text" id="name" value='<%= @names.given_name rescue "" %> <%= @names.family_name rescue "" %>' />
				
				<input type="text" id="Accession Number" value='<%= @accession_number %>' />
				
				<input type="text" id="Age" value='<%= @age %>' />
				
				<input type="text" id="Residence" value='<%= @residence %>' />
				
				<input type="text" id="Work-flow Status" value='<%= @status.name rescue "" %>' />
				
			</div>
			
			<div id="buttons">
				
				<button onmousedown="window.location = '/htcs'">Finish</button>
				
				<button onmousedown="window.location = '/htcs'">Cancel</button>
				
				<button onmousedown="window.location = '/client_demographics?client_id=<%= @client.id -%>'">
				Demographics</button>
				
				<button onmousedown="window.location = '/client_counseling?client_id=<%= @client.id -%>'">
				Counseling</button>
				
				<button onmousedown="window.location = '/client_testing?client_id=<%= @client.id -%>'">
				Testing</button>

				<button onmousedown="window.location = '/referral_consent/<%= @client.id -%>'">
				Referral</button>
				
				<% if defined? session[:datetime].to_date %>
					<button onmousedown="window.location = '/admins/set_date?client_id=<%= @client.id -%>'">
			    Reset Date</button>
				<% else %>
					<button onmousedown="window.location = '/admins/set_date?client_id=<%= @client.id -%>'">
					Set Date</button>
				<% end %>

			</div>
			
			<select id="tabs">
				<option value="/client_current_visit?client_id=<%= @client.id %>">Current Visit</option>
				<option value="/client_previous_visit?client_id=<%= @client.id %>">Past Week Visits</option>
				<option value="/client_previous_visit?client_id=<%= @client.id %>">Past Month Visits</option>
				<option value="/client_previous_visit?client_id=<%= @client.id %>">Past Year Visits</option>
			</select> 
					 
	</div>
	<%= javascript_include_tag 'touchscreentoolkitV2/dashboard' %>
</body
