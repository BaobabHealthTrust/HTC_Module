<%= form_tag("/search_results", id: "search-form", method: 'post', enctype: 'multipart/form-data') do %>
  <%= text_field(:name, 'firstname', {:field_type => 'alpha', 
      :helpText => 'First name', 
      :ajaxURL => '/clients/first_name?search=', 
      :allowFreeText => true })%>
  <%= text_field(:name, 'surname', {:field_type => 'alpha', 
      :helpText => 'Last name', 
      :ajaxURL => '/clients/last_name?search=', 
      :allowFreeText => true })%>
  <%= select_tag(:gender, options_for_select({"" => "", "Male" => "0", "Female" => "1"}), {:helpText => "Gender"})%>

<% end %>
